<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/payment_layout"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout

            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/store_type_image"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/from_camera"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="2020/08/22"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/store_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="가게이름"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/payment_content"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="대충 긴 음식 메뉴 대충 긴 음식 메뉴"/>

            <TextView
                android:id="@+id/total_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_marginRight="40dp"
                android:gravity="right"
                android:text="XXXXX원"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/write_review"
                android:src="@drawable/icon_write_review"
                android:layout_width="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/view_store"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/icon_view_store"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginHorizontal="20dp"
                android:id="@+id/view_detail_payment"
                android:src="@drawable/icon_view_payment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>